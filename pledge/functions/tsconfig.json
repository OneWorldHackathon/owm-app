{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2017",
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // "baseUrl": ".",
    "baseUrl": "types",
    "typeRoots": [
      "types"
    ],
  },
  "compileOnSave": true
}